<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.AnalysisFragment"
    android:gravity="center_horizontal"
    android:layout_marginBottom="32dp">

    <TextView
        android:id="@+id/tv_analysis_sale_till_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Start and End Date: "
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginVertical="20dp"
        android:textAlignment="center"/>

    <LinearLayout
        android:id="@+id/ll_an_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tv_analysis_sale_till_date"
        android:weightSum="4"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_start_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Start Date"
            android:layout_weight="2"
            android:layout_marginEnd="10dp"
            />
        <Button
            android:id="@+id/btn_end_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="End Date"
            android:layout_weight="2"
            />

    </LinearLayout>

    <ListView
        android:id="@+id/rv_analysis"
        android:layout_below="@id/ll_an_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        >

    </ListView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_analysis_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/main_color"
        android:src="@drawable/ic_share"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15dp"
        app:tint="@color/white"
        android:visibility="gone"
        />


</RelativeLayout>